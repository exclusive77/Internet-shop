@model MyShop.Models.Settings

@{
    ViewBag.Title = "SettingsEdit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Настройки</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.EmailMassege, htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.EmailMassege, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailMassege, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllowMessages, htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AllowMessages)
                    @Html.ValidationMessageFor(model => model.AllowMessages, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PageSizeUser, htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.PageSizeUser, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PageSizeUser, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PageSizeAdmin, htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.PageSizeAdmin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PageSizeAdmin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 ">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("На Главную", "Index","Home")
</div>
