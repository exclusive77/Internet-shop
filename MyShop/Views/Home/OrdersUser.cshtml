@model IEnumerable<MyShop.Models.ViewModels.OrdersUserVM>

@{
    ViewBag.Title = "OrdersUser";
}

<h2>Ваши заказы</h2>

@if (!Model.Any())
{
    <h2 class="text-center">
        Нет товаров
    </h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                Ордер Детали
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateAtOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>

            <th>
            
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @foreach (var prod in item.ProductQTY)
        {
            @prod.Key @:x @prod.Value шт;<br />
}
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreateAtOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a href="/Basket/PlaceOrderAddNote/@item.OrderId" class="placeorder btn btn-primary float-right">Примечание</a>
                <a href="/Basket/DeliverysInfo/@item.OrderId" class="placeorder btn btn-primary float-right">Информация о Доставке</a>
            </td>
        </tr>
        }

    </table>
}